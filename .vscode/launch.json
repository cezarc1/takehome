{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: local_chat",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/brain/chat_interface.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            // This launch config expects the .env file to be in the root of the project and where the TOGETHER_API_KEY is set.
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "preLaunchTask": "poetry-run"
        }
    ]
}